@charset "UTF-8";
@font-face {
  font-family: Pangmenzhengdao; /* 指定字体名称 */
  src: url("https://udstatic.imeik.com/pcUploads/1712648373491/pangmenzhengdao.ttf");
}
.input-placeholder {
  color: #ccc;
}
.form-wrapper {
  box-sizing: border-box;
  padding: 48rpx 48rpx 10rpx;
  background: white;
  border-radius: 16rpx;
}
.form-wrapper .uni-forms-item__inner {
  padding-bottom: 48rpx !important;
}
.form-wrapper .uni-forms-item__label {
  height: 42rpx;
  margin-bottom: 24rpx !important;
  padding: 0 !important;
}
.form-wrapper .uni-forms-item__label .label-text {
  color: #29323d;
  font-weight: bold;
  font-size: 30rpx;
}
.form-wrapper .uni-forms-item .uni-easyinput__content-input {
  width: 100%;
  height: 88rpx !important;
  color: #5a6067;
  font-size: 32rpx;
  border-radius: 16rpx;
}
.form-wrapper .uni-forms-item .uni-easyinput__content.is-input-border {
  border-radius: 16rpx;
}
.form-wrapper .uni-forms-item .uni-error-message {
  bottom: 0rpx;
  color: #f4334a;
  font-size: 24rpx;
}
view,
text {
  box-sizing: border-box;
}
checkbox .wx-checkbox-input {
  width: 32rpx;
  height: 32rpx;
  border-radius: 4rpx;
}
/* checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #356ad3;
  border-color: #356ad3;
}
/* checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 20rpx;
  height: 20rpx;
  color: #fff;
  font-size: 22rpx;
  line-height: 20rpx;
  text-align: center;
  background: transparent;
  -webkit-transform: translate(-50%, -50%) scale(1);
          transform: translate(-50%, -50%) scale(1);
}
wx-slider {
  margin: 3rpx 32rpx 6rpx;
}
wx-slider .wx-slider-handle-wrapper {
  height: 6rpx;
}
.no-data.no-more {
  color: #d3d3d3 !important;
  font-size: 24rpx !important;
  text-align: center;
}
image {
  width: 100%;
  height: auto;
}
.uni-popup .uni-popup__wrapper {
  border-radius: 32rpx 32rpx 0 0 !important;
}
.uni-popup {
  position: fixed;
  z-index: 2000 !important;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
::-webkit-scrollbar {
  display: none;
}
.uni-popup {
  position: fixed;
  z-index: 99;
}
.uni-popup.top, .uni-popup.left, .uni-popup.right {
  top: 0;
}
.uni-popup .uni-popup__wrapper {
  display: block;
  position: relative;
  border-radius: 16rpx 16rpx 0rpx 0rpx;
  /* iphonex 等安全区设置，底部安全区适配 */
}
.uni-popup .uni-popup__wrapper.left, .uni-popup .uni-popup__wrapper.right {
  padding-top: 0;
  flex: 1;
}
.fixforpc-z-index {
  z-index: 999;
}
.fixforpc-top {
  top: 0;
}
